<section id="viewFlightDetails">
    <div class="ticket-area">
        <div class="ticket-area-left">
            {{#if flight.image}}
                <img src="{{flight.image}}" alt="{{flight.origin}}-{{flight.destination}}">
            {{else}}
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/No_image_available.svg/600px-No_image_available.svg.png" alt="{{flight.origin}}-{{flight.destination}}" class="picture-added-flight">
            {{/if}}
        </div>
        <div class="ticket-area-right">
            <h3>{{flight.destination}}</h3>
            <div>from {{flight.origin}}</div>
            <div class="data-and-time">
                {{flight.date}} {{flight.time}}
                {{#if flight.isCreator}}
                    <a href="#/flight/edit/{{flight.id}}" class="edit-flight-detail"></a>
                {{/if}}

            </div>
            <div>
                {{flight.seats}} Seats ({{flight.cost}} per seat)
            </div>
        </div>
    </div>
</section>