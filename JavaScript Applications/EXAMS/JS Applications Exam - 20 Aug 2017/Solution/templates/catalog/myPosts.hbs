<div class="posts">
    <article class="post">
        <div class="col rank">
            <span>{{rank}}</span>
        </div>
        <div class="col thumbnail">
            <a href="http://sammyjs.org/docs/api/0.7.4/all#Sammy.RenderContext-load">
                <img src="{{imageUrl}}">
            </a>
        </div>
        <div class="post-content">
            <div class="title">
                <a href="{{url}}">
                    {{title}}
                </a>
            </div>
            <div class="details">
                <div class="info">
                    {{creationInfo}}
                </div>
                <div class="controls">
                    <ul>
                        <li class="action"><a class="commentsLink" href="#">comments</a></li>
                        {{#if isAuthor}}
                            <li class="action"><a class="editLink" href="#/edit/:{{id}}">edit</a></li>
                            <li class="action"><a class="deleteLink" href="#/delete/:{{id}}">delete</a></li>
                        {{/if}}
                    </ul>
                </div>

            </div>
        </div>

    </article>
</div>